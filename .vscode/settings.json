{
  "python-envs.pythonProjects": [],
  // for auto format on save for typescript using prettier, and black for python
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "ms-python.black-formatter"
  },

  "sqltools.connections": [
    {
      "previewLimit": 50,
      "driver": "SQLite",
      "name": "appdb",
      "database": "app.db"
    }
  ],
  "cSpell.words": ["fastapi", "uvicorn", "venv"]
}
